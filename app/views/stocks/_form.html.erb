<%= form_for(@stock) do |f| %>

    <table>
      <tr>
        <td>
          <div class="form-group">
            <%= f.label :label_text, (t "mixed_fields.name") + " *" %><br>
            <%= f.text_field :name %>
          </div>
        </td>
        <td>
          <div class="form-group">
            <%= f.label :label_text, (t "mixed_fields.unit") + " *" %><br>
            <%= f.collection_select :unit_id, Unit.all, :id, :name, {prompt: (t 'stocks.form.select_unit')}, class: "form-control", include_blank: "choose unit" %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="form-group">
            <%= f.label :label_text, (t "stocks.city") %><br>
            <%= f.text_field :city %>
          </div>
        </td>
        <td>
          <div class="form-group">
            <%= f.label :label_text, (t "stocks.street") %><br>
            <%= f.text_field :street %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="form-group">
            <%= f.label :label_text, (t "mixed_fields.info") %><br>
            <%= f.text_area :info %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="actions">

          </div>
        </td>
        <td>
          <div class="actions">

          </div>
        </td>
      </tr>
    </table>
<% end %>
